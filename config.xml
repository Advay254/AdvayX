<?xml version='1.0' encoding='utf-8'?>
<widget id="com.advayx.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AdvayX</name>
    <description>
        Watch More. Wait Less. - Offline video streaming and download app.
    </description>
    <author email="ethannova001@gmail.com" href="https://t.me/AdvayFlix">
        Advay Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="Orientation" value="portrait" />
    
    <plugin name="cordova-plugin-file" spec="^6.0.2" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <plugin name="cordova-plugin-admob-free" spec="^0.27.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="^5.0.0" />
    
    <icon src="res/icon/android/icon-36-ldpi.png" density="ldpi" />
    <icon src="res/icon/android/icon-48-mdpi.png" density="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png" density="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png" density="xhdpi" />
    <icon src="res/icon/android/icon-144-xxhdpi.png" density="xxhdpi" />
    <icon src="res/icon/android/icon-192-xxxhdpi.png" density="xxxhdpi" />
    
    <splash src="res/screen/android/splash-ldpi.png" density="port-ldpi" />
    <splash src="res/screen/android/splash-mdpi.png" density="port-mdpi" />
    <splash src="res/screen/android/splash-hdpi.png" density="port-hdpi" />
    <splash src="res/screen/android/splash-xhdpi.png" density="port-xhdpi" />
    <splash src="res/screen/android/splash-xxhdpi.png" density="port-xxhdpi" />
</widget>